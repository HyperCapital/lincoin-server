{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "esnext.asynciterable",
      "es2015.promise",
      "es2016",
      "es2017.object"
    ],
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
